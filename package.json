{
  "name": "media-recorder",
  "version": "1.0.1",
  "description": "Media Recorder",
  "main": "./lib/media-recorder.js",
  "browserify": {
    "transform": "workerify"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reallyenglish/media-recorder"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "jquery": "*",
    "underscore": "*",
    "browserify": "^11.1.0",
    "workerify": "^0.3.0",
    "webrtc-adapter": "4.0.2"
  },
  "devDependencies": {
    "chai": "*",
    "chai-as-promised": "*",
    "colors": "*",
    "ghooks": "^1.3.2",
    "gulp": "latest",
    "jshint": "^2.8.0",
    "last-release-git-tag": "latest",
    "mocha": "5.1.1",
    "rels-gulp": "git+ssh://git@github.com/reallyenglish/rels-gulp#v4.0.2",
    "semantic-release": "^4.3.5",
    "sinon": "5.0.3",
    "sinon-chai": "3.2.0",
    "validate-commit-msg": "^2.6.1"
  },
  "scripts": {
    "test": "gulp test",
    "semantic-release": "semantic-release pre && semantic-release post"
  },
  "engine-strict": true,
  "engines": {
    "node": "^10",
    "npm": "^6"
  },
  "release": {
    "getLastRelease": "./node_modules/last-release-git-tag/index.js",
    "debug": false
  },
  "config": {
    "validate-commit-msg": {
      "helpMessage": "Valid types are: feat, fix, docs, style, refactor, perf, test, chore, revert \nNote that 'feat' and 'fix' will create new releases as will having BREAKING CHANGE: in the footer of your commit message."
    },
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    }
  }
}
