{
  "name": "media-recorder",
  "version": "1.0.1",
  "description": "Media Recorder",
  "main": "./dist/index.js",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            [
              "@babel/preset-env",
              {
                "debug": false,
                "targets": {
                  "browsers": [
                    "Explorer 11",
                    "last 1 Chrome versions",
                    "last 1 FireFox versions",
                    "last 1 Safari versions",
                    "last 1 Edge versions",
                    "ios 8"
                  ]
                },
                "useBuiltIns": "usage",
                "corejs": "3"
              }
            ]
          ]
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reallyenglish/media-recorder"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "atob": "^2.1.2",
    "jquery": "*",
    "regenerator-runtime": "^0.13.3",
    "underscore": "*",
    "webrtc-adapter": "4.0.2",
    "crypto-js": "latest"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/register": "^7.6.2",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "babelify": "^10.0.0",
    "chai": "*",
    "chai-as-promised": "*",
    "core-js": "^3.2.1",
    "eslint": "^6.5.1",
    "gulp": "^4",
    "husky": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rels-gulp": "git+ssh://git@github.com/reallyenglish/rels-gulp#v5.1.4",
    "semantic-release": "^15.13.25",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0",
    "workerify": "^1.1.0"
  },
  "scripts": {
    "build": "./node_modules/.bin/babel ./lib --out-dir dist",
    "postinstall": "npm run build",
    "test": "gulp test",
    "format": "prettier -c lib/**/*{.js*,.scss}",
    "lint": "eslint lib"
  },
  "engine-strict": true,
  "engines": {
    "node": "^12",
    "npm": "^6"
  }
}
